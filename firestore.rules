rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 👤 USERS (basic profiles + admin role edits)
    match /users/{userId} {
      allow read: if request.auth != null;

      allow update: if request.auth != null && (
        // User can update own profile
        request.auth.uid == userId ||

        // Super-admin can update any user (e.g., to change role)
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin"
      );

      allow create: if request.auth != null;
    }

    // 🎯 JOB SEEKERS setup
    match /jobSeekers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 🏢 EMPLOYERS setup
    match /employers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 💼 JOB POSTS
    match /jobs/{jobId} {
      allow read: if request.auth != null;

      allow create: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "employer";

      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // 📄 JOB APPLICATIONS
    match /applications/{appId} {
      allow read, write: if request.auth != null &&
        (
          resource.data == null || // for creation
          request.auth.uid == resource.data.seekerId ||
          request.auth.uid == resource.data.employerId
        );
    }

    // 💬 DIRECT MESSAGES
    match /messages/{msgId} {
      allow read, write: if request.auth != null &&
        (
          request.auth.uid == resource.data.senderId ||
          request.auth.uid == resource.data.receiverId
        );
    }

    // 🚨 REPORTS (admin-only access to read)
    match /reports/{reportId} {
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin";

      allow create: if request.auth != null; // Users can report
      allow update, delete: if false; // No one modifies existing reports
    }

    // 🆘 SUPPORT MESSAGES (user ↔ admin)
    match /support/{msgId} {
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;

      allow read: if request.auth != null &&
        request.auth.uid == resource.data.userId;

      allow update, delete: if false;
    }

    // 🧩 SUPPORT THREADS (admin only)
    match /supportThreads/{userId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin";
    }

    // 👮 SUPER ADMIN ONLY COLLECTION
    match /admin/{docId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin";
    }
  }
}
