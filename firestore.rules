rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ‘¤ USERS (basic profiles)
    match /users/{userId} {
      allow read: if resource.data.public == true || request.auth != null;
      allow write: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin"
      );
    }

    // ğŸ¯ JOB SEEKERS
    match /jobSeekers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ¢ EMPLOYERS
    match /employers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ’¼ JOB POSTS
    match /jobs/{jobId} {
      allow read: if request.auth != null;

      allow create: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "employer";

      allow update, delete: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin"
      );
    }

    // ğŸ“„ JOB APPLICATIONS
    match /applications/{appId} {
      allow read, write: if request.auth != null &&
        (
          resource.data == null || // on create
          request.auth.uid == resource.data.seekerId ||
          request.auth.uid == resource.data.employerId ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin"
        );
    }

    // ğŸ’¬ DIRECT MESSAGES
    match /messages/{msgId} {
      allow read, write: if request.auth != null &&
        (
          request.auth.uid == resource.data.senderId ||
          request.auth.uid == resource.data.receiverId
        );
    }

    // ğŸš¨ REPORTS (admin viewable, user writable)
    match /reports/{reportId} {
      allow read, write: if request.auth != null;
      allow update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin";
    }

    // ğŸ†˜ SUPPORT MESSAGES (User â†” Admin)
    match /support/{msgId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.userId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin");

      allow update, delete: if false;
    }

    // ğŸ§© SUPPORT THREADS (admin only)
    match /supportThreads/{userId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin";
    }

    // ğŸ‘® ADMIN COLLECTION
    match /admin/{docId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin";
    }

    // ğŸ“Š LOGS
    match /logs/{logId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin";
    }

    // ğŸ“¢ ANNOUNCEMENTS
    match /announcements/{id} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin";
    }

    // âš™ï¸ SETTINGS (public read, admin write)
    match /settings/{docId} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin";
    }

    // ğŸŒ GLOBAL SETTINGS (public read, admin write)
    match /globalSettings/{docId} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "super-admin";
    }
  }
}
